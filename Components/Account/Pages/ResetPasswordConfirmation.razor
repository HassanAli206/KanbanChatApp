@page "/Account/ResetPasswordConfirmation"

<PageTitle>Reset password confirmation</PageTitle>

<style>
    body {
        background: url('/images/teamsync-preview.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    .confirmation-container {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 3rem;
        max-width: 600px;
        margin: 6rem auto;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .confirmation-title {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    .confirmation-message {
        font-size: 1.1rem;
    }

    .confirmation-message a {
        color: #007bff;
        text-decoration: underline;
    }
</style>

<div class="confirmation-container">
    <div class="confirmation-title">Reset password confirmation</div>
    <p class="confirmation-message">
        Your password has been reset. Please <a href="Account/Login">click here to log in</a>.
    </p>
</div>
