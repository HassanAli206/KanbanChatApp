@page "/Account/InvalidPasswordReset"

<PageTitle>Invalid password reset</PageTitle>

<style>
    body {
        background: url('/images/teamsync-preview.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', sans-serif;
    }

    .confirmation-container {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 3rem;
        max-width: 600px;
        margin: 6rem auto;
        text-align: center;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.15);
    }

    .confirmation-title {
        color: #d03030;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .confirmation-text {
        font-size: 1.2rem;
        color: #333;
    }
</style>

<div class="confirmation-container">
    <div class="confirmation-title">Invalid password reset</div>
    <p class="confirmation-text">
        The password reset link is invalid.
    </p>
</div>
